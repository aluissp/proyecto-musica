<div class='container my-4'>

  <div class='row mb-3'>
    <h4 class='col-2'>Buscar</h4>
    <div class='col-10'>
      <form action='/user/explore' method='POST'>

        <div class='input-group'>
          <input
            type='text'
            class='form-control'
            name='wordkey'
            placeholder='Ingresa el artista, album o canción que quieras buscar'
            required
          />
          <button
            class='btn btn-outline-info px-5'
            type='submit'
            id='button-addon2'
          >
            <i class='fas fa-search'></i>
          </button>
        </div>

      </form>
    </div>
  </div>
  {{! Canciones }}
  <div class='row mb-2'>
    <h4 class='col-2 py-3'>Canciones
      <i class='fas fa-chevron-right ml-2'></i>
    </h4>
  </div>
  <div class='row mb-3 border-bottom'>
    {{#if canciones}}
      <table class='table table-striped table-hover'>
        <thead>
          <tr>
            <th>
              <i class='fas fa-sort-numeric-down'></i>
            </th>
            <th scope='col'>Canción
              <i class='bi bi-music-note'></i>
            </th>
            <th scope='col'>Artista
              <i class='fas fa-microphone-alt ml-1'></i>
            </th>
            <th scope='col'>Album
              <i class='fas fa-compact-disc ml-1'></i>
            </th>
            <th scope='col'>Género
              <i class='fas fa-guitar ml-1'></i>
            </th>
            <th scope='col'>Duración
              <i class='bi bi-stopwatch-fill ml-1'></i>
            </th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          {{#each canciones}}
            <tr>
              <td>
                {{nro}}
              </td>
              <td>
                {{nombre_can}}
              </td>
              <td>
                {{seudonimo_art}}
              </td>
              <td>
                {{nombre_alb}}
              </td>
              <td>
                {{nombre_gen}}
              </td>
              <td>
                {{duracion_can}}
              </td>
              <td class='text-center'>
                <a class='btn btn-primary' href='/user/art/album/{{id_alb}}'>
                  Ir al album
                  <i class='fas fa-arrow-alt-circle-right ml-1'></i>
                </a>

              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <h5>No se encontró resultados :(</h5>
    {{/if}}
  </div>

  {{! Albumes }}
  <div class='row mb-2'>
    <h4 class='col-2 py-3'>Albumes
      <i class='fas fa-chevron-right ml-2'></i>
    </h4>
  </div>
  <div class='row mb-3 border-bottom justify-content-star'>
    {{#if albumes}}
      {{#each albumes}}
        <div class='col-3 mx-4 my-2 border border-light rounded-lg'>
          <div class='row justify-content-center'>
            <img src='/img/Logos/album2.png' alt='logo-album' width='230' />
          </div>
          <div class='row p-2'>
            <h5>{{nombre_alb}}</h5>
          </div>
          <div class='row p-1'>
            <a
              href='/user/art/album/{{id_alb}}'
              class='btn btn-outline-light container-fluid'
            >Ir al album
              <i class='fas fa-arrow-alt-circle-right ml-1'></i>
            </a>
          </div>
        </div>
      {{/each}}
    {{else}}
      <h5>No se encontró resultados :(</h5>
    {{/if}}
  </div>

  {{! Artistas }}
  <div class='row mb-2'>
    <h4 class='col-2 py-3'>Artistas
      <i class='fas fa-chevron-right ml-2'></i>
    </h4>
  </div>
  <div class='row mb-3 border-bottom justify-content-star'>

    {{#if artistas}}
      {{#each artistas}}
        <div class='col-3 mx-4 my-2 border border-light rounded-lg'>
          <div class='row justify-content-center bg-light'>
            <img src='/img/Logos/art2.png' alt='logo-album' width='230' />
          </div>
          <div class='row p-1 justify-content-center'>
            <h5>
              {{seudonimo_art}}
            </h5>
          </div>
          <div class='row p-1'>
            <a
              href='/user/art/{{id_art}}'
              class='btn btn-outline-light container-fluid'
            >Ver artista
              <i class='fas fa-eye ml-1'></i>
            </a>
          </div>
        </div>
      {{/each}}
    {{else}}
      <h5>No se encontró resultados :(</h5>
    {{/if}}

  </div>
</div>
