<div class='container my-4'>
  <div class='row col-12 card border-primary mx-auto mt-3'>
    <div class='row border-bottom border-white my-3 pb-2'>
      <h4 class='col-7 d-flex justify-content-end align-items-center'>
        Factura #
        {{nro}}

      </h4>
      <div class='col-5 d-flex justify-content-end'>
        <a
          href='javascript:history.back()'
          class='h1'
          style='text-decoration:none'
        >
          <i class='fas fa-arrow-alt-circle-left'></i>
        </a>
      </div>
    </div>

    <table class='table table-striped table-hover mb-5' id='table'>
      <thead>
        <tr>
          <th>Datos personales</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each userData}}
          <tr>
            <td>{{labelData}}</td>
            <td>{{userData}}</td>

          </tr>
        {{/each}}

      </tbody>
    </table>

    <table class='table table-striped table-hover mb-5' id='table'>
      <thead>
        <tr>
          <th># Código</th>
          <th></th>
          <th>Fecha de emisión
            <i class='fas fa-calendar-day ml-1'></i>
          </th>
          <th>Subtotal</th>
          <th>
            iva
            <i class='fas fa-percent ml-1'></i>
          </th>
          <th>Total</th>

        </tr>
      </thead>
      <tbody>
        {{#each billTable}}
          <tr>
            <td>{{codigo_fac}}</td>
            <td></td>
            <td>{{fechaemision_fac}}</td>
            <td>{{subtotal_fac}}</td>
            <td>{{iva_fac}}</td>
            <td>{{total_fac}}</td>
          </tr>
        {{/each}}

      </tbody>
    </table>
    <h4>Detalle factura</h4>
    <table class='table table-striped table-hover mb-5' id='table'>
      <thead>
        <tr>
          <th># Código</th>
          <th></th>
          <th>Album
            <i class='fas fa-compact-disc ml-1'></i>
          </th>
          <th>Fecha de lanzamiento
            <i class='fas fa-calendar-day ml-1'></i>
          </th>

          <th>Descripción</th>

        </tr>
      </thead>

      <tbody>
        {{#each detailBillTable}}
          <tr>
            <td>{{codigo_fac}}</td>
            <td></td>
            <td>{{nombre_alb}}</td>
            <td>{{fecha_alb}}</td>
            <td>{{descripcion_fac}}</td>
          </tr>
        {{/each}}

      </tbody>
    </table>

    <table class='table table-striped table-hover mb-5' id='table'>
      <thead>
        <tr>
          <th>Nombre de la canción</th>
          <th></th>
          <th>Género
            <i class='fas fa-guitar ml-1'></i>
          </th>
          <th>Duración
            <i class='fas fa-clock ml-1'></i>
          </th>

          <th>Nro. pista</th>

        </tr>
      </thead>

      <tbody>
        {{#each songsTable}}
          <tr>
            <td>{{nombre_can}}</td>
            <td></td>
            <td>{{nombre_gen}}</td>
            <td>{{duracion_can}}</td>
            <td>{{nropista_can}}</td>
          </tr>
        {{/each}}

      </tbody>
    </table>

  </div>
</div>

{{!

    const songsRow = [
      { column_name: 'Nombre de la canción' },
      { column_name: 'Genero' },
      { column_name: 'Duración' },
      { column_name: 'Nro. pistas' },
    ]; }}
