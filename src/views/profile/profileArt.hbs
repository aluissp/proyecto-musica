<div class="container py-4">
    <h1 class="row justify-content-center m-2">Mi cuenta</h1>
</div>

<div class="container ">
    <div class="row my-4 justify-content-between">
        <div class="col-4 ">
            <div class="list-group card border-success">
                <a class="list-group-item list-group-item-action " id="art-perfil">Perfil</a>
                <a class="list-group-item list-group-item-action " id="art-pass">Contrase√±a</a>
                <a class="list-group-item list-group-item-action " id="art-sus">Suscripcion</a>
                <a class="list-group-item list-group-item-action " id="art-tar">Tarjetas</a>
            </div>
        </div>
        <div class="col-8">

            {{> artProfile }}

            {{> artPass }}

            {{> artSub }}

            {{> artTar }}

        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const aperfil = document.getElementById('art-perfil');
        const apass = document.getElementById('art-pass');
        const asus = document.getElementById('art-sus');
        const atarjeta = document.getElementById('art-tar');
        const btnTar = document.getElementById('btn-registrar-tarjeta');
        const btnAddCard = document.getElementById('btn-add-card');

        const tarjeta = document.getElementById('tar-view');
        const sus = document.getElementById('sub-view');
        const pass = document.getElementById('pass-view');
        const perfil = document.getElementById('pro-view');

        aperfil.onclick = () => {
            perfil.classList.remove('d-none');
            pass.classList.add('d-none');
            sus.classList.add('d-none');
            tarjeta.classList.add('d-none');
        }

        apass.onclick = () => {
            perfil.classList.add('d-none');
            pass.classList.remove('d-none');
            sus.classList.add('d-none');
            tarjeta.classList.add('d-none');
        }

        asus.onclick = () => {
            perfil.classList.add('d-none');
            pass.classList.add('d-none');
            sus.classList.remove('d-none');
            tarjeta.classList.add('d-none');
        }

        const eventTar = () => {
            perfil.classList.add('d-none');
            pass.classList.add('d-none');
            sus.classList.add('d-none');
            tarjeta.classList.remove('d-none');
        }
        // Botones que necesitan mostrar tarjetas
        atarjeta.onclick = eventTar;
        btnTar.onclick = eventTar;
        btnAddCard.onclick = eventTar;



    });

</script>