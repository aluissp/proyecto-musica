{{#if success_album}}

<div class="container p-4">
  <div class="row">
    <div class="alert alert-dismissible alert-success d-flex align-items-center">

      <p>{{success_album}}</p>
      <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
</div>
{{/if}}

{{#if message}}

<!-- Alerta -->
<div class="alert alert-danger" role="alert" id="alert">
  {{message}}
  <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}

{{#if message_card}}

<!-- Alerta -->
<div class="alert alert-danger col-12" role="alert" id="alert">
  {{message_card}}
  <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}

{{#if message_card_success}}

<!-- Alerta -->
<div class="alert alert-success col-12" role="alert" id="alert">
  {{message_card_success}}
  <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}

