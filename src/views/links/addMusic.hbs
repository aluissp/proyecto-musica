 <!-- Modal -->

  <div
    class="modal fade"
    id="modal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">
            Edit Todo
          </h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="alert alert-danger d-none" role="alert" id="modal-alert">
            A simple danger alert—check it out!
          </div>
          <form>
            <div class="form-group">
              <label>Title</label>
              <input
                id="modal-title"
                type="text"
                class="form-control"
                placeholder="Do Something"
              />
            </div>
            <div class="form-group">
              <label>Description</label>
              <textarea class="form-control" id="modal-description" rows="3">

              </textarea>
            </div>
            <div class="form-group d-inline-flex">
              <label>Completed</label>
              <div class="mt-1 ml-2">
                <input
                id="modal-completed"
                type="checkbox"
              />
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Close
          </button>
          <button type="button" class="btn btn-info" id="modal-btn">
            Save
          </button>
        </div>
      </div>
    </div>
  </div>

  <main>
    <div class="container pt-3">
      <div class="alert alert-danger d-none" role="alert" id="alert">
        A simple danger alert—check it out!
      </div>

      <!-- Agregar album -->

      <div>
        <form action="/home/addmusic/album" method="POST">
          <div class="row">
            <div class="col-3 d-flex align-items-center">
              <label class="m-0">Titulo</label>
              <input type="text" id="titulo" name='titulo' class="form-control ml-2" placeholder="Ingrese el nombre del album">
            </div>
            <div class="col-2 d-flex align-items-center">
              <label class="m-0">Fecha</label>
              <input type="date" name="fecha" class="form-control ml-2" required>
            </div>
            <div class="col-2 d-flex align-items-center">
              <label class="ml-1 col-7">Numero de pistas</label>
              <input type="number" id="npistas" name="npistas" class="form-control m-0" placeholder='0'>
            </div>
            <div class="col-3 d-flex align-items-center">
                <label class="m-sm-0">Genero</label>
                <input type="text" id="genero" name='genero' class="form-control ml-sm-2" placeholder="Ingrese el genero">
            </div>

            <div class="col-2 d-flex justify-content-end">
              <button type="submit" class="btn btn-info btn-block" id="add">
                Agregar
              </button>
            </div>
            <div class="col-3 d-flex aling-items-center">
                <label class="m-sm-0">Precio</label>
                <input type="number" id="precio" name="precio" class="form-control ml-2" placeholder="0.00" step="0.01">
            </div>

            <div class="col-7 d-flex aling-items-center">
              <label class="m-1">URL</label>
              <input type="text" id="url" name='url' class="form-control ml-2" placeholder="Ingrese el link del album">
            </div>
            
          </div>
        </form>
      </div>

      <!-- Table -->

      <div class="mt-5">
        <table class="table table-striped" id="table">
          <thead>
            <tr>
              <th scope="col">Album</th>
              <th scope="col">Detalles</th>
              <th scope="col">
                <div class="d-flex justify-content-center">
                  Acciones
                </div>
              </th>
              <th scope="col"></th>
            </tr>
          </thead>
