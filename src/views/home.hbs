<div class='container p-4'>
  <div class='row'>
    <div class='col-12 mx-auto'>
      <div class='card text-center border-primary'>
        <div class='card-body'>
          <h3>
            {{#if user.isArt}}
              Bienvenido
              {{user.seudonimo_art}}
            {{/if}}
            {{#if user.isUsu}}
              Bienvenido
              {{user.nombres}}
            {{/if}}
            {{#if user.isAdmin}}
              Bienvenido {{user.nombres}} {{user.apellidos}}
            {{/if}}
          </h3>
        </div>
      </div>
    </div>
  </div>
  <div class='row mt-4'>
    <div class='col-12 mx-auto'>
      <div class='card border-primary p-4'>
        {{#if user.isArt}}
          {{> summaryArt}}
        {{/if}}
        {{#if user.isAdmin}}
          {{> summaryAdmin}}
        {{/if}}

      </div>
    </div>
  </div>
</div>
