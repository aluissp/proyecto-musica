<div class='container card mt-4'>
  <h3 class='ml-2 mt-2'>Tus datos personales</h3>
  <div class='d-flex'>
    <div class='col-6'>
      {{! Formulario }}
      <form action=''>
        <div class='row'>

          <div class='col-6'>
            <label class='form-label mt-4'>Nombre</label>
            <input
              type='text'
              class='form-control'
              placeholder='Ingresa tu nombre'
              name='nombre'
            />
          </div>
          <div class='col-6'>
            <label class='form-label mt-4'>Apellido</label>
            <input
              type='text'
              class='form-control'
              placeholder='Ingresa tu apellido'
              name='apellido'
            />
          </div>
        </div>

        <div class='row mt-2'>
          <div class='col-6'>
            <label class='form-label'>Género</label>
            <input class='form-control' list='generos' name='genero' />
            <datalist id='generos'>
              <option value='Hombre'>Hombre</option>
              <option value='Mujer'>Mujer</option>
              <option value='Otro'>Otro</option>
            </datalist>
          </div>
          <div class='col-6'>
            <label class='form-label'>Fecha de nacimiento</label>
            <input
              type='date'
              class='form-control'
              placeholder='Ingresa tu apellido'
              value='2002-10-01'
              name='fnacimiento'
            />

          </div>
        </div>

        <div class='row d-flex justify-content-end'>
          <button
            type='submit'
            class='btn btn-outline-info mr-3 mt-2 mb-2'
          >Guardar</button>
        </div>
      </form>
    </div>
    <div class='col-6'>
      <form action=''>
        <div class='row pl-5'>

          <label class='form-label mt-4'>Correo electrónico </label>
          <input type='text' class='form-control' disabled />
          <label class='form-label mt-2'>Contraseña</label>
          <input type='text' class='form-control' value='pass' disabled />
          <label class='form-label mt-3 text-warning'>Cambiar contraseña</label>
          <input type='text' class='form-control' value='pass' name='chPass' />
          <label class='form-label mt-2 text-warning'>Confirmar contraseña</label>
          <input type='text' class='form-control' value='' name='confPass' />

        </div>

        <div class='row d-flex justify-content-end'>
          <button type='submit' class='btn btn-outline-info mt-2 mb-2'>
            Cambiar
            <i class='fas fa-exchange-alt pl-2'></i>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
