<div class='container d-flex justify-content-center mt-4'>
  <div class='card text-center border-primary col-8'>
    <div class='card-body'>
      <h3>Agregar nuevo administrador</h3>
    </div>
  </div>
</div>
<div class='container my-4 d-flex justify-content-center'>
  <div class='card border-primary col-8'>
    <div class='d-flex justify-content-center'>
      <div class='col-9 pt-1'>
        {{! Formulario }}
        {{> messageAdmin}}
        <form action='/admin/newAdmin' method='POST'>
          <label class='form-label mt-4'>Nombre</label>
          <input
            type='text'
            class='form-control'
            placeholder='Ingresa el nombre'
            name='nombre'
            required
          />

          <label class='form-label mt-2'>Apellido</label>
          <input
            type='text'
            class='form-control'
            placeholder='Ingresa el apellido'
            name='apellido'
            required
          />

          <label class='form-label mt-2'>Género</label>

          <select class='custom-select' name='genero' required>
            <option value='none'>Elija un genero</option>
            <option value='Hombre'>Hombre</option>
            <option value='Mujer'>Mujer</option>
            <option value='Otro'>Otro</option>
          </select>

          <label class='form-label mt-2'>Fecha de nacimiento</label>
          <input
            type='date'
            class='form-control'
            placeholder='Ingresa tu apellido'
            name='fnacimiento'
            required
          />
          <label class='form-label mt-2'>Correo electrónico </label>
          <input
            type='email'
            class='form-control'
            name='mail'
            placeholder='ejemplo@mail.com'
            required
          />
          <label class='form-label mt-2'>Contraseña</label>
          <input
            type='text'
            class='form-control'
            name='pass'
            placeholder='Escriba una contraseña segura'
            required
          />

          <div class='row d-flex justify-content-end'>
            <button
              type='submit'
              class='btn btn-outline-info mr-3 mt-2 mb-2'
            >Crear</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
