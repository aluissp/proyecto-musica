<div class='container d-flex justify-content-center mt-4'>
  <div class='card text-center border-primary col-8'>
    <div class='card-body'>
      <h3>Agregar nuevo administrador</h3>
    </div>
  </div>
</div>
<div class='container my-4 d-flex justify-content-center'>
  <div class='card border-primary col-8'>
    <div class='d-flex justify-content-center'>
      <div class='col-9'>
        {{! Formulario }}
        <form action=''>

          <label class='form-label mt-4'>Nombre</label>
          <input
            type='text'
            class='form-control'
            placeholder='Ingresa el nombre'
            name='nombre'
          />

          <label class='form-label mt-4'>Apellido</label>
          <input
            type='text'
            class='form-control'
            placeholder='Ingresa el apellido'
            name='apellido'
          />

          <label class='form-label'>Género</label>
          <input class='form-control' list='generos' name='genero' />
          <datalist id='generos'>
            <option value='Hombre'>Hombre</option>
            <option value='Mujer'>Mujer</option>
            <option value='Otro'>Otro</option>
          </datalist>
          <label class='form-label'>Fecha de nacimiento</label>
          <input
            type='date'
            class='form-control'
            placeholder='Ingresa tu apellido'
            name='fnacimiento'
          />
          <label class='form-label mt-2'>Correo electrónico </label>
          <input type='text' class='form-control' disabled />
          <label class='form-label mt-2'>Contraseña</label>
          <input type='text' class='form-control' value='pass' disabled />

          <div class='row d-flex justify-content-end'>
            <button
              type='submit'
              class='btn btn-outline-info mr-3 mt-2 mb-2'
            >Guardar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
